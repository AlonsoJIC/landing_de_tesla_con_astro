---
import Charge from "../components/Charge.astro";
import MainPage from "../components/MainPage.astro";
import HeaderPrincipal from "../components/HeaderPrincipal.astro";
import ModelS from "../components/ModelS.astro";
import ModelT3 from "../components/Model3.astro";
import ModelX from "../components/ModelX.astro";
import ModelY from "../components/ModelY.astro";
import PowerWall from "../components/PowerWall.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Coches eléctricos, energía solar y ?">
  <HeaderPrincipal />

  <main class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth">
    <div class="snap-center">
      <MainPage />
    </div>
    <div class="snap-center">
      <ModelY />
    </div>
    <div class="snap-center">
      <ModelT3 />
    </div>
    <div class="snap-center">
      <ModelS />
    </div>
    <div class="snap-center">
      <ModelX />
    </div>
    <div class="snap-center">
      <PowerWall />
    </div>
    <div class="snap-center">
      <Charge />
    </div>
  </main>
</Layout>
